from flask import Flask, request
import requests
import os

app = Flask(__name__)

PAGE_ACCESS_TOKEN = os.getenv(
    "EAA7goNSumg0BQGIrUzZAOcQ8l8MlDZAIznclASuZCZAx5IH34VUeZCpeGDb4GXN8iEMJjyxViEZCuNABMvl1ZAxM1R2T7TR5CEyboaGhXZBKeTlvMmvhTTVYbadke1MT5uWOtwPqQtMXMZARRAwnAMhakftDlR5ZCPdj1ZBocPaGRIalp2ZBbGA5DcuEt2EoyBOkkZBslqsZBP9ZC36CPXev74XP8Vd9gcZAOgZDZD")
VERIFY_TOKEN = "monitor_bot_verify_123"  # you choose this


def send_message(psid, text):
    url = "https://graph.facebook.com/v18.0/me/messages"
    payload = {
        "recipient": {"id": psid},
        "message": {"text": text}
    }
    params = {"access_token": PAGE_ACCESS_TOKEN}
    requests.post(url, params=params, json=payload)


@app.route("/webhook", methods=["GET"])
def verify():
    if request.args.get("hub.verify_token") == VERIFY_TOKEN:
        return request.args.get("hub.challenge")
    return "Invalid token", 403


@app.route("/webhook", methods=["POST"])
def webhook():
    data = request.json
    for entry in data.get("entry", []):
        for event in entry.get("messaging", []):
            if "message" in event:
                psid = event["sender"]["id"]
                send_message(psid, "Bot is online âœ…")
    return "EVENT_RECEIVED", 200


if __name__ == "__main__":
    app.run(port=5000)
